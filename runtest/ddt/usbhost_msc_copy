USBHOST_M_FUNC_COPY_C2C_50M source 'common.sh' ; do_cmd install_modules.sh 'usb'; scsi_dd_readwrite_between_nodes.sh -b 1M -c 50 -n c
USBHOST_M_FUNC_COPY_bw_AC_50M source 'common.sh' ; do_cmd install_modules.sh 'usb'; scsi_dd_readwrite_between_nodes.sh -b 1M -c 50 -n "a c"
USBHOST_M_FUNC_COPY_bw_BC_50M source 'common.sh' ; do_cmd install_modules.sh 'usb'; scsi_dd_readwrite_between_nodes.sh -b 1M -c 50 -n "b a"
USBHOST_M_FUNC_COPY_bw_ABC_100M source 'common.sh' ; do_cmd install_modules.sh 'usb'; scsi_dd_readwrite_between_nodes.sh -b 2M -c 50 -n "a b c"
USBHOST_L_FUNC_COPY_A2A_1G source 'common.sh' ; do_cmd install_modules.sh 'usb'; scsi_dd_readwrite_between_nodes.sh -b 1M -c 1000 -n a


